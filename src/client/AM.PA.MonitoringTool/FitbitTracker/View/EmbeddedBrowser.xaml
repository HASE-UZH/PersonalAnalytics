<UserControl x:Class="FitbitTracker.View.EmbeddedBrowser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FitbitTracker.View"
             mc:Ignorable="d"
             Width="800" Height="550"
             d:DesignHeight="300" d:DesignWidth="300">
    
    <Grid Background="#007acc">
        <WebBrowser x:Name="PABrowser"/>
        <TextBlock Background="#007acc" Foreground="White" TextAlignment="Center" VerticalAlignment="Center" x:Name="Success" Text="Thanks for registering, this window closes in 10 seconds."  Visibility="Collapsed" Margin="30,30" TextWrapping="Wrap" FontSize="18" ></TextBlock>
        <TextBlock Background="#007acc" Foreground="White" TextAlignment="Center" VerticalAlignment="Center" x:Name="Error" Text="Registration failed, FitbitTracker will be disabled. This window closes in 10 seconds."  Visibility="Collapsed" Margin="30,30" FontSize="18" TextWrapping="Wrap"></TextBlock>
    </Grid>
</UserControl>
