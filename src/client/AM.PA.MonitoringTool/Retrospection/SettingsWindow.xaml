<Window x:Class="Retrospection.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Retrospection"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="PersonalAnalytics: Settings"
        Width="650"
        Height="620"
        ResizeMode="NoResize"
        mc:Ignorable="d">

    <Window.Resources>
        <SolidColorBrush x:Key="RetrospectionColor" Color="#007acc" />
        <SolidColorBrush x:Key="GrayColor" Color="#E8E8E8" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="{StaticResource RetrospectionColor}">
            <TextBlock Grid.Row="0"
                       Margin="10 0 0 0"
                       VerticalAlignment="Center"
                       FontSize="16"
                       Foreground="White"
                       Text="Settings" />
        </Grid>

        <StackPanel Grid.Row="1" Margin="10">
            <!--<TextBlock Text="Manage the settings:"/>-->
            <CheckBox x:Name="CbPopUpsEnabled" Content="Productivity pop-ups enabled" />
            <TextBlock Margin="20 0 0 0"
                       Foreground="Gray"
                       Text="Hint: This will show you a pop-up to chose your perceived productivity in an interval specified below. We suggest you to enable this feature as it may give you additional, unique insights."
                       TextWrapping="Wrap" />

            <StackPanel Margin="20 20 0 0">
                <TextBlock Text="How often should the pop-up be displayed to ask you about your perceived productivity?" />
                <ComboBox x:Name="CbPopUpInterval"
                          Width="200"
                          Margin="0 5 10 0"
                          HorizontalAlignment="Left"
                          SelectedValuePath="Content">
                    <ComboBoxItem>20 minutes</ComboBoxItem>
                    <ComboBoxItem>30 minutes</ComboBoxItem>
                    <ComboBoxItem>60 minutes</ComboBoxItem>
                    <ComboBoxItem>120 minutes</ComboBoxItem>
                </ComboBox>
            </StackPanel>

            <CheckBox x:Name="CbUserInputTrackerEnabled"
                      Margin="0 20 0 0"
                      Content="User Input Tracker enabled" />
            <TextBlock x:Name="TbUserInputTrackerHint"
                       Margin="20 0 0 0"
                       Foreground="Gray"
                       Text="Hint: In case you experience some lags with the mouse and keyboard after you installed the tool, it might be caused by the user input tracker. Please let us know if you experience this issue so we can try to fix it. In the meantime, we suggest you to disable the tracker temporarily."
                       TextWrapping="Wrap" />

            <CheckBox x:Name="CbOpenRetrospectionInFullScreen"
                      Margin="0 20 0 0"
                      Content="Always open the retrospection in full screen" />

            <CheckBox x:Name="CbTimeSpentShowProgramsEnabled"
                      Margin="0 20 0 0"
                      Content="Show programs used in the 'Time Spent'-table" />
            <CheckBox x:Name="CbTimeSpentShowEmailsEnabled"
                      Margin="0 5 0 0"
                      Content="Show details from working in Outlook in the 'Time Spent'-table" />
            <TextBlock Margin="20 0 0 0"
                       Foreground="Gray"
                       Text="Hint: The time spent reading/writing emails might not be perfect as this metric bases on the Outlook window title, which is not changed if you are not reading/writing emails in new window, but the Outlook main window."
                       TextWrapping="Wrap" />


            <CheckBox x:Name="CbOfficeApiEnabled"
                      Margin="0 20 0 0"
                      Content="Office 365 Tracker enabled" />
            <TextBlock x:Name="TbOfficeApiHint"
                       Margin="20 0 0 0"
                       Foreground="Gray"
                       Text="Hint: If you enable it, you need to log-in with your Office 365 work account. This tracker will then regularly collect the meetings in your calendar, and the number of emails sent, received and your inbox size. The contents of the emails and meetings are NOT accessed."
                       TextWrapping="Wrap" />

            <CheckBox x:Name="CbFlowLightEnabled"
                      Margin="0 20 0 0"
                      Content="FlowLight enabled" />
            <TextBlock x:Name="TbFlowLightEnabledHint"
                       Margin="20,0,0,0"
                       Foreground="Gray"
                       Text="Hint: If you enable it, your Skype for Business status and your FlowLight will be updated automatically based on your activity on the computer and your calender events."
                       TextWrapping="Wrap" />

        </StackPanel>

        <StackPanel Grid.Row="2"
                    Margin="10"
                    Orientation="Horizontal">
            <Button x:Name="BtnSave"
                    Margin="20 0 0 0"
                    Background="{StaticResource RetrospectionColor}"
                    BorderBrush="{StaticResource RetrospectionColor}"
                    Click="SaveClicked"
                    Content="Save"
                    Foreground="White"
                    Padding="5 0 5 0" />
            <Button x:Name="BtnCancel"
                    Margin="10 0 0 0"
                    Background="{StaticResource GrayColor}"
                    BorderBrush="{StaticResource GrayColor}"
                    Click="CancelClicked"
                    Content="Cancel"
                    Foreground="Gray"
                    Padding="5 0 5 0" />
        </StackPanel>

        <Grid Grid.Row="3" Background="#E8E8E8">
            <Grid.Resources>
                <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="{x:Type Button}">
                    <Setter Property="Foreground" Value="Gray" />
                    <Setter Property="Background" Value="{StaticResource GrayColor}" />
                    <Setter Property="BorderBrush" Value="{StaticResource GrayColor}" />
                    <Setter Property="Padding" Value="5 0 5 0" />
                </Style>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="TbVersion"
                       Grid.Column="0"
                       Margin="10 0 0 0"
                       Foreground="Gray" />
            <Button Grid.Column="1"
                    Margin="0 0 5 0"
                    VerticalAlignment="Center"
                    Click="Feedback_Clicked"
                    Content="Feedback" />
        </Grid>
    </Grid>
</Window>
